FROM node:16.13.1
WORKDIR /app
COPY package*.json ./
RUN npm i

ARG SERVER_URL
ARG SSO_URL
ARG GITHUB
ARG KAKAO
ARG GOOGLE
ARG NAVER

ENV REACT_APP_BASE_URL=${SERVER_URL} \
    REACT_APP_NAVER=${NAVER} \
    REACT_APP_GOOGLE=${GOOGLE} \
    REACT_APP_GITHUB=${GITHUB} \
    REACT_APP_KAKAO=${KAKAO} \
    REACT_APP_SSO_URL=${SSO_URL} \
    DISABLE_ESLINT_PLUGIN=true
COPY ./ ./
RUN npm i --save serve
RUN npm run build
EXPOSE 3000
ENTRYPOINT ["npm", "run", "serve"]